<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegActivity">

    <ImageView
        android:id="@+id/imAvatarReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bAvatarReg"
        tools:layout_editor_absoluteX="143dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/bAvatarReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="avatar"
        app:layout_constraintBottom_toTopOf="@+id/edLogin"
        tools:layout_editor_absoluteX="164dp" />

    <EditText
        android:id="@+id/edName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="имя"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bDone"
        tools:layout_editor_absoluteX="100dp" />

    <EditText
        android:id="@+id/edLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="логин"
        android:inputType="textPersonName"
        android:text="ТЕСТ"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="398dp" />

    <Button
        android:id="@+id/bDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginLeft="159dp"
        android:layout_marginTop="548dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="135dp"
        android:onClick="onClickDone"
        android:text="готово"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/bDone"
        app:layout_constraintStart_toStartOf="@+id/bDone"
        app:layout_constraintTop_toBottomOf="@+id/bDone" />

    <EditText
        android:id="@+id/edPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/edName"
        app:layout_constraintTop_toBottomOf="@+id/edLogin"
        tools:layout_editor_absoluteX="100dp" />


</androidx.constraintlayout.widget.ConstraintLayout>